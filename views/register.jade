extends layout

block content
	.container
		h1 Register
		p Please register user form below
		ul.errors
			if errors
				each error, i in errors
					li.alert.alert-danger #{error.msg}
		form(action='/users/register', method="post", enctype="multipart/form-data")
			.form-group
				label Name
				input.form-control(name='name', type='text', placeholer='Enter Name')
			.form-group
				label Email
				input.form-control(name='email', type='email', placeholer='Enter Email')
			.form-group
				label Username
				input.form-control(name='username', type='text', placeholer='Enter Username')
			.form-group
				label Password
				input.form-control(name='password', type='password', placeholer='Enter Password')
			
			.form-group
				label Confirm Password
				input.form-control(name='password2', type='password', placeholer='Confirm Password')
				
			.form-group
				label Profile Image
				input.form-control(name='profileimage', id='profileimage', type='file')
			input.btn.btn-default(name="submit" type="submit" value="Register") 